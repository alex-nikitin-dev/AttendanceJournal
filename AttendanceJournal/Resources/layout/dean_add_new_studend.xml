<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px">
    <TextView
         android:layout_marginTop="10dp"
        android:text="Add new student"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dean_newStd_Information"
        android:layout_marginBottom="@dimen/abc_edit_text_inset_bottom_material" />
    <EditText
        android:hint="Name"
        android:textSize="25dp"
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dean_newStd_Name" />
    <EditText
        android:hint="Phone format(960000000)"
        android:textSize="25dp"
        android:inputType="phone"
        android:maxLength = "9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dean_newStd_Phone" />
    <EditText
        android:hint="Group Number without cource (151)"
        android:textSize="25dp"
        android:inputType="numberSigned"
        android:maxLength = "3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dean_newStd_GroupNumber" />
    <EditText
        android:hint="Year"
        android:textSize="25dp"
        android:inputType="numberSigned"
        android:maxLength = "4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dean_newStd_StartYear" />
    <Button
        android:clickable="true"
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/abc_action_bar_content_inset_material"
        android:id="@+id/dean_newStd_Button_Add" />


</LinearLayout>