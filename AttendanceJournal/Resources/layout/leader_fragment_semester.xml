<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <Spinner
        android:id="@+id/sp_leader_semester_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp" />

    <TextView
        android:id="@+id/tv_leader_semester_numb_of_passes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sp_leader_semester_number"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="16dp"
        android:text="Number of passes"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/tv_leader_semester_entry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_leader_semester_numb_of_passes"
        android:layout_marginTop="0dp" />

</RelativeLayout>